<html>
    <head>
        <meta charset="utf-8">
        <title>Restaurants Guide</title>
    </head>
    <body>
        <h1>Welcome to Portland's restaurant guide</h1>

            <h3>Edit: {{restaurant.getRestaurantName}}</h3>
            <form action="/restaurant/{{restaurant.getId}}/edit" method="post">
                <input name="_method" type="hidden" value="patch">
                <input type="text" name="name" value="{{restaurant.getRestaurantName}}" placeholder="New Restaurant Name">
                <input type="text" name="price" value="{{restaurant.getPrice}}" placeholder="New Price Name">
                <input type="text" name="description" value="{{restaurant.getDescription}}" placeholder="New Description Name">
                <button type="submit" name="button">Edit {{restaurant.getRestaurantName}}</button>
            </form>

            <form action="/" method="get">
                <button type="submit" name="button">Home</button>
                <button type="submit" formaction="/restaurant/{{restaurant.getId}}" name="edit">Back to Restaurant Page</button>
            </form>

            <!-- <form action="/restaurant/{{restaurant.getId}}" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit">Delete This Restaurant</button>
            </form> -->

            <form action="/cuisine_type/{{restaurant.getIdCuisine}}{{restaurant.getId}}" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit">Delete {{restaurant.getRestaurantName}}</button>
            </form>

    </body>
</html>
